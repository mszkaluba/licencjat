{% extends 'base.html.twig' %}
{% block head %}
    <meta charset="utf-8">
    {% block title %}Przetargi{% endblock %}
{% endblock %}

{% block body %}
    <a href="{{ path('glowna') }}">Przetargi</a>
    <a href="{{ path('mojePrzetargi', {'id': app.user.id}) }}">Moje przetargi</a>
    <a href="{{ path('mojeOferty', {'id': app.user.id}) }}">Moje oferty</a>
    <a href="{{ path('app_logout') }}">Wyloguj</a>
    </br></br>
    <a href="{{ path('nowy', {'id': app.user.id}) }}" type="button">Nowy przetarg</a>
    {% for przetarg in przetargi %}
        <h3>Dane przetargu</h3>
        Nazwa: {{ przetarg.nazwa }} </br>
        Data wystawienia: {{ przetarg.dataRozpoczecia|date("d/m/Y") }} </br>
        Data zakończenia zgłaszania ofert: {{ przetarg.dataZakonczenia|date("d/m/Y") }} </br>
        <a href="{{ path('nowaOferta', {'id': przetarg.id}) }}">Dodaj ofertę</a>
    {% endfor %}
{% endblock %}